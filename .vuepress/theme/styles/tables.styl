table
    margin theme('margin.12') 0
    width 100%
    border-collapse collapse
    overflow-x: auto
    color: theme('textColor.primary')
    

tr:nth-child(2n)
    background-color theme('backgroundColor.ternary')

th, td
    border 1px solid theme('borderColor.borderPrimary')
    padding theme('padding.2') theme('padding.6')

thead
    th, td
        border none
        padding-bottom 0
